<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/content_main_menu_coordinator_layout"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="svp.com.dontmissplaces.MainMenuActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/mainmenu_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main_map" />

    <LinearLayout
        android:id="@+id/floating_action_layout"
        android:layout_gravity="bottom|end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/track_recording_show_place_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/textColorWhite"
            android:layout_margin="@dimen/fab_margin"
             />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/track_recording_start_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/ic_near_me_white_48dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/select_place_scrolling_act_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/windowBackground"
        android:orientation="vertical"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
        >
        <LinearLayout
            android:layout_gravity="fill|fill_horizontal"
            android:gravity="fill|fill_horizontal"
            android:layout_height="@dimen/android_standard_toolbar_subtitle"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/common_signin_btn_default_background">
            <ImageButton
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_near_me_white_48dp"
                style="?android:attr/borderlessButtonStyle" />
            <ImageButton
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_add_location_white_48dp"
                style="?android:attr/borderlessButtonStyle" />
            <ImageButton
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_gps_fixed_white_48dp"
                style="?android:attr/borderlessButtonStyle" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/select_place_scrolling_header_layout"
            android:layout_gravity="center_vertical|start"
            android:gravity="center_vertical|start"
            android:layout_height="@dimen/android_standard_list_item"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/colorPrimary"
            android:paddingStart="16dp">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/select_place_show_title"
                android:textSize="@dimen/android_standard_headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/select_place_show_latlng"
                android:textSize="@dimen/android_standard_subheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="android_standard_subheading"/>
        </LinearLayout>
        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            >
            <android.support.v7.widget.AppCompatTextView
                android:layout_marginStart="16dp"
                android:layout_marginEnd="32dp"
                android:layout_gravity="center_vertical|start"
                android:gravity="center_vertical|start"
                android:layout_width="match_parent"
                android:layout_height="@dimen/android_standard_toolbar_subtitle"
                android:text="Address fdxzsf fdsf . dsf"
                />
            <android.support.v7.widget.AppCompatTextView
                android:layout_gravity="center_vertical|start"
                android:gravity="center_vertical|start"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="32dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/android_standard_toolbar_subtitle"
                android:text="Address 3453 fdxzsf fdsf . dsf"
                />
            <View
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/select_place_scrolling_act_save_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/fab_margin"
        app:backgroundTint="@color/textColorWhite"
        android:src="@drawable/ic_menu_send"
        app:layout_anchor="@id/select_place_show_title"
        app:layout_anchorGravity="end" />

    <com.bowyer.app.fabtransitionlayout.FooterLayout
        android:id="@+id/track_recording_fabtoolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:ft_container_gravity="center"
        app:ft_color="@color/colorAccent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageButton
                android:id="@+id/track_recording_resume_pause"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_pause_white_48dp"
                android:layout_gravity="start"
                android:layout_alignParentStart="true"
                />
            <LinearLayout
                android:layout_centerInParent="true"
                android:layout_gravity="center|center_horizontal|center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/track_recording_distance_output"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/android_standard_subheading"
                android:textColor="@color/textColorWhite"
                android:gravity="center|center_horizontal|bottom"
                android:text="0.0"
                android:layout_gravity="left|center_horizontal|center_vertical"/>

            <TextView
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:id="@+id/track_recording_timer_output"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/android_standard_title"
                android:textColor="@color/textColorWhite"
                android:gravity="center|center_horizontal|top"
                android:layout_gravity="center|center_horizontal|center_vertical"/>

            <TextView
                android:id="@+id/track_recording_speed_output"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/android_standard_subheading"
                android:textColor="@color/textColorWhite"
                android:gravity="center|center_horizontal|bottom"
                android:text="0.00"
                android:layout_gravity="right|center_horizontal|center_vertical"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/track_recording_stop"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_stop_white_48dp"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>
    </com.bowyer.app.fabtransitionlayout.FooterLayout>

</android.support.design.widget.CoordinatorLayout>
