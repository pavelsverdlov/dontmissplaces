<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_list_subways_subway_item_template_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="1dp"
    card_view:cardCornerRadius="0dp">
    <LinearLayout
        android:background="@color/text_white"
        android:padding="@dimen/android_standard_list_item_padding"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_marginStart="@dimen/android_standard_list_item_padding"
            android:id="@+id/activity_list_subways_subway_item_template_subway_name"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="@dimen/text_size_medium"
            android:autoLink="web"
            android:clickable="true"
            android:textColor="@color/text_gray"
            android:linksClickable="true"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:id="@+id/activity_list_subways_subway_item_template_subway_lines"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>