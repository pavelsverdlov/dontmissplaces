<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="vertical">
        <TextView
            android:id="@+id/activity_search_new_route_template_name_from_to"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="dsaljdalknn  ndalsnd" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/activity_search_new_route_template_station_count"
                android:gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Stations: 5"/>
            <TextView
                android:id="@+id/activity_search_new_route_template_lines"
                android:gravity="end"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Lines: 2"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>