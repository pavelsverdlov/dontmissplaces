<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/station_template_card_view"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_gravity="center"
    android:layout_marginBottom="1dp"
    card_view:cardCornerRadius="0dp">
    <LinearLayout
        android:background="@color/text_white"
        android:padding="@dimen/android_standard_list_item_padding"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_marginStart="@dimen/android_standard_list_item_padding"
            android:id="@+id/activity_add_new_subway_station_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_medium_btn"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Heiligenstadt"
            />

        <TextView
            android:id="@+id/activity_add_new_subway_line_template_line_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_white"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="@color/colorPrimary"
            android:padding="2dp"
            android:text="U3"/>
    </LinearLayout>
</android.support.v7.widget.CardView>